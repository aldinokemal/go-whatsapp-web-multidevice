# Application Settings
APP_PORT=3000
APP_DEBUG=false
APP_OS=Chrome
APP_BASIC_AUTH=user1:pass1,user2:pass2
APP_BASE_PATH=

# Database Settings
DB_URI="file:storages/whatsapp.db?_foreign_keys=on"
DB_KEYS_URI="file::memory:?cache=shared&_foreign_keys=on"

# WhatsApp Settings
WHATSAPP_AUTO_REPLY="Auto reply message"
WHATSAPP_AUTO_MARK_READ=false
WHATSAPP_WEBHOOK=https://webhook.site/07b69616-5943-4c7f-a8be-db4819df699e,https://webhook.site/09a38aff-d11a-4a38-a176-3f3efa0b5e8b
WHATSAPP_WEBHOOK_SECRET=super-secret-key
WHATSAPP_ACCOUNT_VALIDATION=true
WHATSAPP_CHAT_STORAGE=true

# Media Storage Configuration
# Storage type: "local" for local file system, "s3" for S3-compatible storage
MEDIA_STORAGE_TYPE=local

# S3-Compatible Storage Configuration (only used when MEDIA_STORAGE_TYPE=s3)
# Works with: AWS S3, MinIO, DigitalOcean Spaces, Wasabi, Backblaze B2, etc.
# IMPORTANT: Bucket must be created manually before starting the application
#
# For AWS S3:
#   S3_ENDPOINT=https://s3.amazonaws.com (or region-specific: https://s3.us-east-1.amazonaws.com)
#   S3_FORCE_PATH_STYLE=false
#
# For MinIO:
#   S3_ENDPOINT=https://your-minio-server.com
#   S3_FORCE_PATH_STYLE=true
#
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key
S3_BUCKET=whatsapp-media
S3_FORCE_PATH_STYLE=false
S3_PUBLIC_URL=

# Bucket Access Mode:
# - For PUBLIC bucket: Set S3_USE_SERVER_PROXY=false (direct URLs, faster)
#   Make bucket public with: mc anonymous set download s3/bucket-name
# - For PRIVATE bucket: Set S3_USE_SERVER_PROXY=true (server proxies downloads with authentication)
S3_USE_SERVER_PROXY=false
