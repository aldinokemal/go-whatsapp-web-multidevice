# Environment variables for GOWA development
# Copy this file to src/.env and modify as needed

# Admin API Configuration
ADMIN_TOKEN=dev-token-123
ADMIN_PORT=8088
ADMIN_DEBUG=true

# Supervisor Configuration
SUPERVISOR_URL=http://127.0.0.1:9001/RPC2
SUPERVISOR_USER=admin
SUPERVISOR_PASS=admin123
SUPERVISOR_CONF_DIR=/etc/supervisor/conf.d
SUPERVISOR_LOG_DIR=/var/log/supervisor

# Instance Configuration
INSTANCES_DIR=/app/instances
GOWA_BIN=/workspaces/go-whatsapp-web-multidevice/src/whatsapp
GOWA_BASIC_AUTH=admin:admin
GOWA_DEBUG=true
GOWA_OS=Chrome
GOWA_ACCOUNT_VALIDATION=false
LOCK_DIR=/tmp

# Application Settings
APP_PORT=3000
APP_DEBUG=true
APP_OS=Chrome
DB_URI=file:storages/whatsapp.db?_foreign_keys=on
